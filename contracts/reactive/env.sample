# ============================================================
# Core signer and broadcast controls
# ============================================================

# Deployer private key used by forge scripts and shell helpers.
PRIVATE_KEY=

# Optional key used only by fundcontract.sh.
# If empty, scripts may fall back to PRIVATE_KEY depending on usage.
REACTIVE_PRIVATE_KEY=

# Set to true to send transactions, false for dry-run style execution where supported.
BROADCAST=true

# Optional: enable verbose logs in e2e.sh.
DEBUG=false

# ============================================================
# RPC endpoints
# ============================================================

# Reactive Network RPC endpoint.
REACTIVE_RPC=https://lasna-rpc.rnk.dev

# Protocol chain RPC endpoint (example: Sepolia).
PROTOCOL_RPC=https://sepolia.infura.io/v3/<YOUR_KEY>

# ============================================================
# Callback proxies and chain identifiers
# ============================================================

# Callback proxy on the protocol chain (from Reactive docs for your network).
PROTOCOL_CALLBACK_PROXY=0xc9f36411C9897e7F959D99ffca2a0Ba7ee0D7bDA

# Callback proxy on the reactive chain (from Reactive docs for your network).
REACTIVE_CALLBACK_PROXY=0x0000000000000000000000000000000000fffFfF

# Protocol chain id (example: Arbitrum Sepolia, Ethereum Sepolia, Arbitrum One, etc.).
PROTOCOL_CHAIN_ID=11155111

# Reactive chain id (example: Lasna testnet).
REACTIVE_CHAIN_ID=5318007

# ============================================================
# Deployment-wiring addresses
# Fill these after each deploy step.
# ============================================================

# Protocol LiquidityHub address.
LIQUIDITY_HUB=

# Destination BatchProcessSettlement receiver address (protocol chain).
BATCH_RECEIVER=

# HubCallback address (reactive chain).
HUB_CALLBACK=

# HubRSC address (reactive chain).
HUB_RSC=

# Recipient used for spoke deployment/whitelisting/e2e flow.
RECIPIENT=

# Used by WhitelistSpokeForRecipient.s.sol as the "spoke" argument.
# IMPORTANT: set this to the DEPLOYED SpokeRSC CONTRACT ADDRESS, not an EOA.
RVM_ID=

# ============================================================
# Optional deployment prefund/value overrides
# ============================================================

# Native value sent when deploying receiver (DeployReceiver.s.sol).
RECEIVER_PREFUND_WEI=

# Native value sent when deploying HubCallback (deployreactivehub.sh).
HUB_CALLBACK_VALUE=

# Native value sent when deploying HubRSC (deployreactivehub.sh).
HUB_RSC_VALUE=

# Native value sent when deploying SpokeRSC (deployreactivespoke.sh).
SPOKE_VALUE=
